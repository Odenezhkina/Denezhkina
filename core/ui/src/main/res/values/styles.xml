<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContentLoadingProgressBar.Primary" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/main_blue</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/main_blue</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="ImageViewFavorite">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@string/cd_to_favorites</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_baseline_star_border_24</item>
        <item name="tint">@color/main_blue</item>
    </style>

</resources>
