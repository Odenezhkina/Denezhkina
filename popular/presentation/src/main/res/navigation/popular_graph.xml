<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popular_graph"
    app:startDestination="@id/popularMoviesFragment">

    <fragment
        android:id="@+id/popularMoviesFragment"
        android:name="com.study.presentation.movies.PopularMoviesFragment"
        android:label="PopularMoviesFragment"
        tools:layout="@layout/fragment_popular_movies">
        <action
            android:id="@+id/action_popularMoviesFragment_to_detailedMovieFragment"
            app:destination="@id/detailedMovieFragment">
            <argument
                android:name="movieId"
                android:defaultValue="-1"
                app:argType="integer" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/detailedMovieFragment"
        android:name="com.study.presentation.detailed_movie.DetailedMovieFragment"
        android:label="DetailedMovieFragment"
        tools:layout="@layout/fragment_detailed_movie" />
</navigation>
